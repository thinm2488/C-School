                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Học và tên</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                <input ng-model="ten" size="60" maxlength="255" class="form-control"type="text"> 

                                            </div>
                                        </div>
                                        <hr />

                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Ngày sinh</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                <input ng-model="ngaySinh" size="60" maxlength="255" class="form-control"type="text"> 

                                            </div>
                                        </div>
                                        <hr />
                                        
                                        
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Giới tính</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                <input ng-model="gioiTinh" size="60" maxlength="255" class="form-control"type="text"> 

                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Lớp</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                <input ng-model="lop" size="60" maxlength="255" class="form-control"type="text"> 
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Địa chỉ</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                <input ng-model="diaChi" size="60" maxlength="255" class="form-control"type="text"> 

                                            </div>
                                        </div>
                                        <hr />
                                       

                                    </div>
                              
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
