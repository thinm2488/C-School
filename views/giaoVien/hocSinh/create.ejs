    <% include ../../header.ejs %>
<div style="margin-top:6%"class="container">
        <div class="row">
            <div class="col-12">
                <div  style="background: rgba(255,255,255,.7);"class="card">

                    <div class="card-body">
                        <div class="card-title mb-4">
                            <div class="d-flex justify-content-start">
                                <div class="image-container">
                                    <img style=" width: 150px; height: 150px" src="../../../images/{{hinh}}" id="img" class="img-fluid" alt="Responsive image">
