<body ng-app="user" ng-controller="studentController"
    style="background-image: url(../images/hero-bg.jpg);padding: 20px">
    <div class="row" style="margin:-20px; height: 8%;background-color: white">
        <div class="col-12">
            <% include ../../header.ejs %>
            <br />
            <div class="container" style="margin-top:5%;background: rgba(255,255,255,.7)">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="width:100%">
                    <h1 style="text-align: center;font-size:50px!important;color:#19c880;padding: 25px">Danh sách học
                        sinh</h1>
                    <div class="row">
                        <div class="col-sm-3 col-md-1 col-5">
                            <label style="font-weight:bold;">Lớp</label>
                        </div>
                        <div class="col-md-2 col-3">
                            <select style="margin-left: -60px;width:100px;border-radius: 10px;    height: 35px!important;" id="lop"
                                class="form-control" id="exampleFormControlSelect1" ng-model="lop"
                                ng-options="option.value as option.name for option in danhSachLop">

                            </select>

                        </div>
                        <div class="col-sm-3 col-md-1 col-5">
                            <label style="font-weight:bold;margin-left: -100px">Loại</label>
                        </div>
                        <div class="col-md-2 col-3">
                            <select style="margin-left: -150px;width:100px;border-radius: 10px;    height: 35px!important;" id="loai"
                                class="form-control" id="exampleFormControlSelect1" ng-model="loai"
                                ng-options="option.value as option.name for option in danhSachLoai">

                            </select>

                        </div>
                        <button style="border-radius: 10px;margin-left: -180px" ng-click="laydanhsach()" type="button" class="btn-u pull-left">Xem</button>

                    </div>
                    <h3 ng-show="checklist">Không có danh sách lớp đã chọn ...!</h3>
                    <div ng-show="check">

                        <table  class="table table-wrapper-scroll-y my-custom-scrollbar">
                            <thead>
                                <tr>
                                    <th scope="col">Ảnh</th>
                                    <th scope="col">Tên Học Sinh</th>
                                    <th scope="col">Lớp</th>
                                    <th scope="col">Ngày Sinh</th>
                                    <th scope="col">DiaChi</th>
                                    <th scope="col"></th>


                                    <!-- <th style="width:15%" scope="col"></th> -->

                                </tr>
                            </thead>
                            <tbody ng-repeat="student in liststudent">

                                <tr>

                                    <td><a href="/hocSinh/{{student._id}}"><img
                                                style="width: 60px;height: 60px;border-radius: 50%;"
                                                src="../images/{{student.hinh}}" /></a></td>
                                    <td style="text-overflow: ellipsis; ;padding-top: 20px"><a
                                            href="/hocSinh/{{student._id}}">
                                            <p class="qư">{{student.tenHocSinh}}</p>
                                        </a></td>
                                    <td style="padding-top: 20px;width: 20%;"><a
                                            href="/hocSinh/{{student._id}}">{{student.lop}}{{student.loai}}</a></td>

                                    <td style="padding-top: 20px;width: 20%"><a
                                            href="/hocSinh/{{student._id}}">{{student.ngaySinh| date:'hh:mm  dd/MM'}}</a>
                                    </td>
                                    <td style="text-overflow: ellipsis; ;padding-top: 20px"><a
                                            href="/hocSinh/{{student._id}}">
                                            <p class="qư">{{student.diaChi}}</p>
                                        </a></td>
                                    <td><a href="/hocSinh/{{student._id}}"><button class="btn btn-warning"> <span
                                                    class="glyphicon glyphicon-pencil"></span></button></a> </td>


                                    <!-- <td ><a href="/user/{{user._id}}"><button class="btn btn-warning"> <span class="glyphicon glyphicon-pencil"></span>&ensp; Sửa</button></a> </td> -->
                                    </a>
                                </tr>

                            </tbody>
                        </table>

                    </div>

                   
                    <a href="/hocSinh/create"><button
                            style=" margin-bottom: 30px;margin-top: 20px;margin-left: 38%;font-size: 25px;border-radius: 10px ; background-color:#19c880"
                            class="btn-u pull-left" type="button"><span
                                class="glyphicon glyphicon-plus-sign"></span>&ensp; Thêm Học Sinh</button></a>
                </div>
            </div>
</body>



